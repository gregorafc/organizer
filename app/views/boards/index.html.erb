<div class='container'>

  <h1>Boards</h1>

  <% @boards.each do |board| %>
    <div>
      <%= board.title %>
      <%= link_to 'Show', board %>
      <%= link_to 'Edit title', edit_board_path(board) %>
      <%= link_to 'Destroy board', board, method: :delete,
                                            data: { confirm: 'Are you sure?'} %>
    </div>
  <% end %>

  <%= link_to 'New board', new_board_path %>
</div>